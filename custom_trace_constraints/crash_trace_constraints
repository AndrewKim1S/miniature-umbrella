  def run(self, path_addr, flags, mode=None):
    try:
      path_str = self.state.mem[path_addr].string.concrete
    except Exception as e:
      print "[!] SafeOpen: Failed to resulve path string from addr %s" % path_addr
      return -1
    print "[+] SafeOpen: Opening file '%s'" % path_str
    return self.state.posix.open(path_str, flags)
