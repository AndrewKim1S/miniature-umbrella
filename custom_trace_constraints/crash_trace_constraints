#!/usr/bin/env python

# NOTES 
# angr has fundamental limitation with stdin inputs, thus all target binaries must only
# take input from files

import sys
import os
import time
import socket
import signal
import subprocess32
import re

try:
    import shellphish_qemu
except ImportError:
    raise ImportError("Import Error for shellphish_qemu")

import itertools
import angr
from angr.exploration_techniques import CrashMonitor, Oppologist

"""
